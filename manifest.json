{
    "manifest_version": 3,
    "name": "InterrupCat",
    "version": "1.0",
    "description": "タイピング時に特定のキーや文字で音を鳴らす拡張機能",
    "permissions": [
        "storage",
        "offscreen",
        "contextMenus"
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "InterrupCat",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "options_page": "options/options.html",
    "background": {
        "service_worker": "background/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content/content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "libs/*",
                "sounds/*",
                "icon*.png"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}